<footer class="py-5 mb-5">
    <div class="container d-flex flex-column gap-3">
        <div class="d-flex justify-content-between align-items-center">
            <!-- @todo make every word on a new line with the style -->
            <div class="fs-1 lh-1">
                <% global.footer.map.text.split(' ').forEach(function(word) { %>
                    <div><%= word %></div>
                <% }); %>
            </div>
            <img class="w-50" src="<%= global.footer.map.img.url %>" alt="<%= global.footer.map.img.alt %>" style="mix-blend-mode: difference">
        </div>
        <div class="d-flex justify-content-between">
            <% $social.forEach(item => { %> 
                <a href="<%= item.url %>" target="_blank"><%= item.title %></a>
            <% }) %>
            <a href="<%= global.footer.contacts.email.url %>" target="_blank"><%= global.footer.contacts.email.text %></a>
            <a href="<%= global.footer.contacts.phone.url %>" target="_blank"><%= global.footer.contacts.phone.text %></a>
        </div>
    </div>
</footer>


<script src="/js/bootstrap.bundle.min.js"></script>
